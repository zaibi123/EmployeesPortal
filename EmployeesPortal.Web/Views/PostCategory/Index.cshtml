@model IEnumerable<EmplyeesPortal.Core.PostCategory>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "All - Post Categories";
}
@section scripts {
    @Scripts.Render("~/Scripts/datatables")
    <script src="~/Scripts/plugins/jquery.alphanum.js"></script>
}
<!-- Page header -->
@section header {
    <div style="background-color: #fff;" class="panel page-header border-top-primary">
        <div class="page-header-content">
            <div class="page-title">
                <h5>
                    <i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Manage Post Category</span>
                    <small class="display-block">add,list and search Post Category </small>
                </h5>
            </div>
            <div class="heading-elements">
                <div class="btn-group">
                    <a href="/PostCategory/create" class="btn btn-primary"><i class="icon-add position-left"></i> New Post Category</a>
                    <a href="/PostCategory/index" class="btn btn-primary"><i class="icon-add position-left"></i> List All Post Categories</a>
                </div>
            </div>
            <a class="heading-elements-toggle"><i class="icon-menu"></i></a>
        </div>
        <div style="margin-bottom: 0; border-bottom: 0; box-shadow: none;" class="breadcrumb-line">
            <ul class="breadcrumb">
                <li><a href="/Home/"><i class="icon-home2 position-left"></i> Home</a></li>
                <li><a href="/PostCategory/index">Post Categories</a></li>
                <li><a href="/PostCategory/create">Add Post Category</a></li>
            </ul>
        </div>
    </div>
}
<div class="panel panel-default">
    <div class="panel-body">
        <div class="tabbable">
            <ul class="nav nav-tabs nav-tabs-highlight">
                <li class="active">
                    @Html.ActionLink("Post Categories", "index", "Postcategory", new { @class = "fa fa-tasks label-icon-sm" })
                </li>
            </ul>
            <div class="tab-content">
                <table class="table datatable-button-html5-basic" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="First Name: activate to sort column descending">
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.isactive)
                            </th>
                           
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr role="row" class="odd">
                                <td class="sorting_1">
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.isactive)
                                </td>
                               
                                <td class="text-center">
                                    @Html.ActionLink("Edit", "Edit", "PostCategory", new { id = item.id }, new { @class = "btn btn-primary btn-xs" })
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>